{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{{ ID }}",
  "title": "WGS-84 Location Schema",
  "description": "Schema for WGS-84 location validation",
  "type": "object",
  "properties": {
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90,
      "description": "Latitude in degrees"
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180,
      "description": "Longitude in degrees"
    }
  },
  "required": [
    "latitude",
    "longitude"
  ]
}
